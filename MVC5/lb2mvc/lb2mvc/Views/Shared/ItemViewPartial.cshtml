@model lb2mvc.DAL.Entities.Notebook


<div class="col-md-4">
    <div class="thumbnail">
        
        <img  class="img-thumbnail img-plus" src="@Url.Action("GetImage","Notebook",  new { productId = Model.NotebookId })" alt="NoImage" />
        <div class="caption">
            <div class="item-name">
                <h3>@Model.Name</h3>
            </div>
            <div class="item-description">
                @Model.Description
            </div>
            <div class="centered">
                <h3 class="badge">Цена: @Model.Price</h3>
            </div>
            <div class="centered">
                <a href="@Url.Action("AddToCart", "Cart", new { id=Model.NotebookId, returnUrl=Request.Path })" class="btn btn-primary">
                    <span class="glyphicon glyphicon-shopping-cart">
                    </span>
                    В корзину
                </a>
            </div>
        </div>
    </div>
</div>
